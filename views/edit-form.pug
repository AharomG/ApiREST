extends layout
block content
    form(action="/update/"+ID+"?_method=PUT", method='POST')
        label(for="ID") ID:
        input(type="text", id='food-id', name='food-id', value=data[0].ID, disabled)
        input(type="hidden", id='ID', name="ID", value=data[0].ID, required)
        br
        label(for="price") price: 
        input(type="text", id='price', name='price', value=data[0].price, required)
        br
        label(for="description") description:
        input(type="text", id='description', name='description', value=data[0].description, required)
        br
        label(for="name") name:
        input(type="text", id='name', name='name', value=data[0].name, required)
        br
        label(for="img") imgURL:
        input(type="text", id='img', name='img', value=data[0].img, required)
        br
        button(type='submit') submit